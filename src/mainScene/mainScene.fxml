<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="549.0" prefWidth="836.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainScene.mainSceneController">
   <top>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Memory Allocation Project" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin></Label>
   </top>
   <left>
      <VBox alignment="CENTER" prefHeight="410.0" prefWidth="219.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Process Entry" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <JFXTextField fx:id="processName" promptText="Process Name" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="numOfSegments" onAction="#showSegmentsEntry" promptText="Number of  Segments" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <Label fx:id="segmentLabel" text="Segement Entry" visible="false" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <JFXTextField fx:id="segmentName" promptText="Segment Name" visible="false" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="segmentSize" prefHeight="25.0" prefWidth="219.0" promptText="Segment Size" visible="false" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <HBox prefHeight="5.0" prefWidth="192.0">
               <children>
                  <JFXButton alignment="CENTER" buttonType="RAISED" onAction="#nextSegment" text="Next Segment" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" top="20.0" />
                     </HBox.margin>
                     <effect>
                        <Shadow />
                     </effect>
                  </JFXButton>
                  <JFXButton fx:id="enterProcess" alignment="CENTER" buttonType="RAISED" onAction="#enterProcess" text="Done" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" top="20.0" />
                     </HBox.margin>
                     <effect>
                        <Shadow />
                     </effect>
                  </JFXButton>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
               </VBox.margin>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
   <right>
      <VBox alignment="CENTER" prefHeight="412.0" prefWidth="299.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Segment Table">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TabPane fx:id="tabPane" prefHeight="430.0" prefWidth="299.0" tabClosingPolicy="UNAVAILABLE" />
            <JFXButton buttonType="RAISED" onAction="#goBack" text="Back">
               <effect>
                  <Shadow />
               </effect>
            </JFXButton>
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <center>
      <BorderPane prefHeight="410.0" prefWidth="17.0" BorderPane.alignment="CENTER">
         <top>
            <Label text="Memory layout" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </Label>
         </top>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </BorderPane>
   </center>
</BorderPane>
